body
  background: url('/img/bg.png')
  background-size: cover
  font-family: "Trebuchet MS", Tahoma, sans-serif;

.container
  margin: 0 auto
  width: 1096px
  height: 100%
  display: flex
  align-items: center
  align-content: center
  justify-content: space-between
  flex-flow: row wrap

.page-title
  font-family: 'Exo'
  color: white
  text-align: center
  font-size: 36px
  width: 100%

@media (max-width: 1200px)
  .container
    width: 704px
    height: auto
    justify-content: space-around

@media (max-width: 800px)
  .container
    width: 312px
